<div class="panel panel-primary" style="width:90%;margin-left:23px">
<div class="panel-heading">New Activity</div>
  <div class="panel-body">

<form class="form-horizontal">

  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      {{input type="email" class="form-control" id="inputEmail3" value=model.name placeholder="Name" style="width:50%"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
	
	 <input {{action 'createActivity'}} value="Save Changes" type="submit" class="btn btn-primary"/>
     <a href="#" {{action 'cancel'}} class="btn btn-warning">Cancel</a>
    
    </div>
  </div>
</form>
</div>
</div>
